<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Myprofile"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/TitleSize"
                    android:id="@+id/toolbarManagerUser"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:layout_height="50dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imgback"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="6dp"
                android:elevation="20dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_toRightOf="@+id/framelayout"
                        android:background="@color/colorPrimary"
                        android:id="@+id/txtbackground6"
                        android:layout_height="130dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_toRightOf="@+id/txtbackground6"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:text="Information"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#FA0606"
                        android:textStyle="bold|italic"
                        android:id="@+id/txtchinhsuathongtin"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="Edit"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/framelayout"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imgavartaruser"
                            android:layout_width="100dp"
                            android:layout_height="98dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_user_confirm"
                            android:layout_margin="15dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:elevation="30dp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="50dp" />

                    </FrameLayout>
                    <LinearLayout
                        android:layout_toRightOf="@+id/framelayout"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:foregroundGravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_toRightOf="@+id/framelayout"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="username"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:id="@+id/txtusername"
                            android:textColor="#000"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_toRightOf="@+id/framelayout"
                            android:layout_below="@+id/txttensanpham"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:id="@+id/linner"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtemail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email"
                                android:textColor="#000"
                                android:padding="5dp"
                                android:textSize="18sp"
                                android:layout_below="@+id/txttensanpham"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:id="@+id/txtsdt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="sdt"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:layout_below="@+id/txttensanpham"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="6dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/txttitle1"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Information Other"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="age"
                        android:padding="7dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:maxLines="3"
                        android:layout_below="@+id/txttitledc1"
                        android:ellipsize="end"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#000"
                        android:padding="7dp"
                        android:text="18"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="gender"
                        android:padding="7dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:maxLines="3"
                        android:layout_below="@+id/txttitledc1"
                        android:ellipsize="end"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtgender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#000"
                        android:padding="7dp"
                        android:text="18"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:textSize="14dp"
                        android:textColor="#FA0606"
                        android:textStyle="bold|italic"
                        android:layout_marginBottom="10dp"
                        android:text="Edit"
                        android:id="@+id/txtchinhsuadiachi"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>